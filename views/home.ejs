<%- include('./partials/header') %>
<main>
  <h1 class="white-bg"><%= title %></h1>

    <% if (user) { %> 
      <form class="white-bg" method="POST"
        action="/tweets">
        <textarea class="white-bg" name="content"></textarea>
        <br>
        <ul><li id="test"><input id="tweet-btn" type="submit" value="Tweet"></li></ul>
      </form>
      <br> 
      <ul>
        <% tweets.forEach(function(t) { %>
          <a id="tweet-post" href="/tweets/<%= t._id %>">
            <li class="hdr"><img alt="avatar" class="avatar" src="<%= t.userAvatar %>" referrerpolicy="no-referrer" >
              <%= t.userName %>
                <%= t.createdAt.toLocaleDateString() %></li>
                <li><%= t.content %></li>
            <nav class="white-bg">
              <a id="tweetnav-reply" href="/tweets/<%= t._id %>">Reply</a>
              <%= t.replies.length %>
              <form class="white-bg" method="POST" action="/retweets">
                <input id="tweetnav-rt" type="submit" value="Retweet"> 0
              </form>
              <a id="tweetnav-like" href="/likes/<%= t._id %>">Like</a>
                <%= t.likes.length %>
            </nav>
            <br>
          </a>
          <% }); %>
        </ul>
    <% } %>
</main>
<%- include('./partials/footer') %>